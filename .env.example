# Helyxium Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# Application Settings
# =============================================================================

# Environment mode: development, staging, production
HELYXIUM_ENV=production

# Application host and port
HELYXIUM_HOST=0.0.0.0
HELYXIUM_PORT=8000

# WebSocket server port
HELYXIUM_WS_PORT=8080

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (relative to project root)
LOG_FILE=logs/helyxium.log

# Enable file logging (true/false)
LOG_TO_FILE=true

# Enable console logging (true/false)
LOG_TO_CONSOLE=true

# =============================================================================
# Localization
# =============================================================================

# Default language (ISO 639-1 code: en, es, fr, de, ja, zh, etc.)
DEFAULT_LANGUAGE=en

# Auto-detect system language (true/false)
AUTO_DETECT_LANGUAGE=true

# =============================================================================
# Theme Settings
# =============================================================================

# Theme mode: light, dark, auto
THEME_MODE=auto

# =============================================================================
# VR Hardware Detection
# =============================================================================

# Hardware detection interval in seconds
HW_DETECTION_INTERVAL=5

# Platform detection interval in seconds
PLATFORM_DETECTION_INTERVAL=10

# Enable USB device scanning (true/false)
ENABLE_USB_SCANNING=true

# Enable OpenVR detection (true/false)
ENABLE_OPENVR_DETECTION=true

# =============================================================================
# Security & Authentication
# =============================================================================

# Secret key for encryption (generate a strong random key)
SECRET_KEY=change-this-to-a-random-secret-key

# Session timeout in minutes
SESSION_TIMEOUT=60

# Enable COPPA compliance checks (true/false)
ENABLE_COPPA_COMPLIANCE=true

# Minimum age requirement
MIN_AGE_REQUIREMENT=13

# =============================================================================
# API Configuration
# =============================================================================

# Enable FastAPI server (true/false)
ENABLE_API_SERVER=true

# API key (optional, leave empty to disable API authentication)
API_KEY=

# Enable API documentation (true/false)
ENABLE_API_DOCS=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Database (Optional - for future use)
# =============================================================================

# Database URL (SQLite example)
# DATABASE_URL=sqlite:///./helyxium.db

# =============================================================================
# VR Platform Integration
# =============================================================================

# SteamVR settings
STEAMVR_PATH=

# Oculus settings
OCULUS_PATH=

# =============================================================================
# Performance & Resources
# =============================================================================

# Maximum memory usage (MB)
MAX_MEMORY_MB=2048

# Enable GPU acceleration (true/false)
ENABLE_GPU_ACCELERATION=true

# =============================================================================
# Development Settings (only for HELYXIUM_ENV=development)
# =============================================================================

# Enable debug mode (true/false)
DEBUG=false

# Enable hot reload (true/false)
HOT_RELOAD=false

# =============================================================================
# Docker-specific Settings
# =============================================================================

# Display server for X11 (Linux/macOS)
DISPLAY=:0

# =============================================================================
# Notifications
# =============================================================================

# Enable system tray notifications (true/false)
ENABLE_NOTIFICATIONS=true

# Enable sound alerts (true/false)
ENABLE_SOUND_ALERTS=false
